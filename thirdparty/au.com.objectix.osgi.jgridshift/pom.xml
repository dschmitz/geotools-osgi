<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>au.com.objectix.osgi</groupId>
  <artifactId>au.com.objectix.osgi.jgridshift</artifactId>
  <packaging>bundle</packaging>
  <name>JGridshift</name>
  <version>1.0</version>
  <parent>
    <groupId>org.geotools</groupId>
    <artifactId>thirdparty</artifactId>
    <version>8.0.0.osgi</version>
  </parent> 
  <dependencies>
   <dependency>
      <groupId>jgridshift</groupId>
      <artifactId>jgridshift</artifactId>
      <version>1.0</version>   
   </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.4</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Name>JGridshift</Bundle-Name>
            <Bundle-SymbolicName></Bundle-SymbolicName>
            <Bundle-Description>OSGI bundle for JGridshift</Bundle-Description>
            <Bundle-Version>${version}</Bundle-Version>
            <Export-Package>*</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
